<%- include('./partials/head.ejs') %>
<%- include('./partials/header.ejs') %>

<br/>


  <br/>



    <table class="table table responsive table-sm table-hover">
    <thead  class="thead-dark">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Name</th>
          <th scope="col">Description</th>
          <th scope="col">Impact</th>
          <th scope="col">Data Source</th>
          <th scope="col">Preparer</th>
          <th scope="col">Reviewer</th>
          <th scope="col"></th>
          <th scope="col"></th>
          <th scope="col"></th>
        </tr>
    </thead>

    <% for (let i = 0; i < data.length; i++) { %>
        <% let j = i + 1 %>
        <tbody>
            <tr>
              <th scope="row" class="text-secondary"><%= j %></th>
              <td class="text-secondary"><%= data[i].name %></td>
              <td class="text-secondary"><%= data[i].description %></td>
              <td class="text-secondary">$<%= data[i].plImpact.toLocaleString()%></td>
              <td class="text-secondary"><%= data[i].source %></td>
              <td class="text-secondary"><%= data[i].preparer %></td>
              <td class="text-secondary"><%= data[i].reviewer %></td>
              <td ><a href="/index/<%= data[i].id %>" class="badge badge-primary">Details</a></td>
              <td>
                <a href="/index/<%= data[i].id %>/edit" class="badge badge-success">Update</a>
                </td>
              <td>
                <form action="/index/<%= data[i].id %>?_method=DELETE" method="POST">
                    <input type="submit" value="Delete" class="btn btn-link btn-sm text-danger">
                </form>
                </td>
            </tr>
        </tbody>
   
    <% } %>
</table>

<%- include('./partials/footer.ejs') %>
    
